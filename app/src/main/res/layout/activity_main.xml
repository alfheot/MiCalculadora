<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:text=""
        android:textSize="30sp"
        android:gravity="end"
        android:paddingTop="10dp"
        android:paddingStart="0dp"
        android:paddingEnd="28dp"
        android:id="@+id/textoOperacion"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.17"
        android:gravity="end|center"
        android:paddingStart="0dp"
        android:paddingEnd="20dp"
        android:text="0"
        android:textSize="100sp"
        android:id="@+id/pantallaPrincipal"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.15">
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="C"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonResetC"
            />
        <Button
            android:textSize="50sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="+/-"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonCambioSignoG"/>
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="%"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonPorcentajeP"/>
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="/"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonDivisionB"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:orientation="horizontal">

        <Button
            android:id="@+id/botonNumero7"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="7"
            android:textSize="60sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/botonNumero8"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="60sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/botonNumero9"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="9"
            android:textSize="60sp"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/botonMultiplicacionX"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:text="x"
            android:textSize="60sp"
            app:cornerRadius="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.15">
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="4"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonNumero4"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="5"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonNumero5"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="6"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonNumero6"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="-"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonRestaR"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.15">
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="1"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonNumero1"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="2"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonNumero2"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="3"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonNumero3"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="+"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonSumaM"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="0.15">
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.50"
            android:layout_height="match_parent"
            android:text="0"
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonNumero0"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text=","
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonComa"
            />
        <Button
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="match_parent"
            android:text="="
            app:cornerRadius="0dp"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/botonIgualI"
            />
    </LinearLayout>


</LinearLayout>